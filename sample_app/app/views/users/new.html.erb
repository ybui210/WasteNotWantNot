<% provide(:title, "Sign Up") %>
		<!--Logo-->

    <div class="col-xs-12 img" >
      <%= image_tag("logo.png", alt: "Waste Not Want Not",id: "logo_big") %>
		</div>

    <div class="row">
      <div class="col-lg-8 col-lg-offset-2">
        <%= form_for(@user) do |f| %>
          <%= f.label :name %>
          <%= f.text_field :name %>

          <%= f.label :email %>
          <%= f.email_field :email %>

          <%= f.label :password %>
          <%= f.password_field :password %>

          <%= f.label :password_confirmation, "Confirmation" %>
          <%= f.password_field :password_confirmation %>

          <%= f.submit "Create my account", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>


		<!--link back to sign in-->
		<div class="row">
			<div class="col-xs-8 col-xs-offset-2 center"><br>Already A Member?
				<%= link_to "Click here",   login_path %></br>
			</div>
		</div>
